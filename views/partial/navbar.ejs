<script>
    function signout() {
        fetch('/api/auth/token/', {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.href = '/';
                console.log
            } else {
                alert('Sign out failed');
            }
        })
        .catch(error => console.error('Error:', error));
    }
